{
  "$schema": "https://schema.hypermode.com/modus.json",
  "endpoints": {
    "default": {
      "type": "graphql",
      "path": "/graphql",
      "auth": "bearer-token"
    }
  },
  "models": {
    "llama": {
      "sourceModel": "meta-llama/Llama-3.2-3B-Instruct",
      "provider": "hugging-face",
      "connection": "hypermode"
    }
  },
  "connections": {
    "moduspressdb": {
      "type": "postgresql",
      "connString": "postgresql://{{USERNAME}}@{{HOST}}:{{port}}/{{DBNAME}}"
    }
  }
}
